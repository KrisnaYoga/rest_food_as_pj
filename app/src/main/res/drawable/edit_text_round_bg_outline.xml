<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dip" android:color="@color/grey_20" />
                    <corners android:radius="@dimen/spacing_small" />
                    <padding android:left="8.0dip" android:top="5.0dip" android:right="8.0dip" android:bottom="5.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dip" android:color="@color/grey_20" />
                    <solid android:color="@color/grey_10" />
                    <corners android:radius="@dimen/spacing_small" />
                    <padding android:left="8.0dip" android:top="5.0dip" android:right="8.0dip" android:bottom="5.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dip" android:color="@color/grey_10" />
                    <corners android:radius="@dimen/spacing_small" />
                    <padding android:left="8.0dip" android:top="5.0dip" android:right="8.0dip" android:bottom="5.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>